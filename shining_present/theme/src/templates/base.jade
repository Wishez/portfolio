include layouts/_mixins
| {% load static %}
doctype
html.no-js(lang="ru")
  head
    include layouts/_head
    
  body(class=bodyClass)
    //.curtains
      //figure.preloader
    //BEGIN out
    .out(class=outClass)
      include partials/_header
      //BEGIN main
      main#main.main
        .container
          | {% block content %}
          | {% endblock %}
      
      include partials/_footer
    //END out
    | {% block settings.widgets %}
    | {% endblock %}
    
    script(src="{% static 'portfolio/js/app.js' %}", async)

    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-103835197-1', 'auto');
      ga('send', 'pageview');
  link(
    href="{% static 'portfolio/css/screen.css' %}", 
    media="none",
    rel="stylesheet",
    onload="if(media != 'screen') media='screen';"
  )
  link(
    href="{% static 'portfolio/css/app.css' %}", 
    media="none",
    rel="stylesheet",
    onload="if(media != 'all') media='all';"
  )
  link( 
    href="{% static 'portfolio/css/print.css' %}",
    media="none",
    rel="stylesheet",
    type="text/css",
    onload="if(media != 'print') media='print';"
  )
  link(
    rel="icon",
    href="{% static 'portfolio/img/favicon.ico' %}"
  )
  link(
      rel="stylesheet",
      href="{% static 'portfolio/css/ie.css' %}",
      media="none",
      onload="if(media != 'all') media='all';"
  )
  
