    method='post'
  )
    | {% csrf_token %}
    // Fields
    | {% for field in form %}
    .controller
		label.controller__label(class="{% if field.field.required == true %}controller__label_required{% endif %}", title="{% if field.field.required == true %}Обязательное для заполнения поле{% else %}Заполните поле по желанию{% endif %}") {{ field.label }}
