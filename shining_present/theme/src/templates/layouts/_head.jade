| {% endif %}
link(
  rel="stylesheet",
  href="{% static 'portfolio/css/main.css' %}",
  media="none",
  onload="if (media !== 'all') media='all';"
)
style.
  .curtains, .preloader {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 10000;
  }
  .curtains {
    top: 0;
    left: 0;
    background-color: #ccc;
  }
  
  .preloader {
    background: url("{% static 'portfolio/img/ajax-loader.gif' %}") no-repeat center;
    background-size: 100px;
  }
